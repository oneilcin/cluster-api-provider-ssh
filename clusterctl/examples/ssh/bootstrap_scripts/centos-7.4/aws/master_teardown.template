
          set -e
          set -x
          (
          ARCH=amd64
          ${FUNCTIONS}

          if ! drain; then
            echo >&2 "Unable to drain and/or delete on $(hostname)..."
            exit 68
          fi

          if ! teardown; then
            echo >&2 "Teardown unsuccessful."
            exit 69
          fi

          echo "Done..."
          ) 2>&1 | sudo tee -a /var/log/teardown.log
